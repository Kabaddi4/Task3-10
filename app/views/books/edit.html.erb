<%= form_with model:@book, local: true do |f| %>
  <label for="inputTitle">Title</label>
  <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"タイトル"%>
  <label for="inputOpinion">Opinion</label>
  <%= f.text_field :body, autofocus: true, id:"opinion", placeholder:"感想"%>
  <%= f.submit "Update Book" %>
<%end%>
<%= link_to "show", book_path %>