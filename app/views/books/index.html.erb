<!--/books-->

<!--部分テンプレート呼出-->
<%= render 'books/list', user: current_user %>


<!--右側（投稿一覧画面）-->
<div class="col-md-8" offset-md-1>
<h2>Books</h2>
  <% @books.each do |book| %>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60 %></td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :delete %></td>
      </tr>
    </tbody>
  </table>
</div>
<% end %>
