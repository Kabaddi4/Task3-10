
<%= render 'books/list', user: current_user %>
<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class>
        <tbody>
          <tr>
            <td><%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60 %><br>
                <%= @book.user.name %></td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
        <% if @book.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book) %></td>
            <td><%= link_to "delete", book_path(@book), method: :delete %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
