        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th><th><%= book.user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= book.user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <span><%= link_to "Edit", edit_book_path(book.id) %></span>
      <% end %>
    </div>

<%#左下%>
    <%= form_with model:@book, local:true do |f| %>
