      <label for="book_title">title</label>
      <%= f.text_field :title, class:"form-group" %>
      <label for="book_opinion">opinion</p>
      <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
    <% end %>
  </div>
</div>