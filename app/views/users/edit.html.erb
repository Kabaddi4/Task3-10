<%= form_with model:@user, local: true do |f| %>
  <div class="form-group">
    <label for="user_name">Name</label>
    <%= f.text_field :name, autofocus: true, class: "form-control name" %>
  </div>
  <div class="form-group">
    <label for="user_image">image</label>
    <%= f.attachment_field :profile_image, class: "form-control-file" %>
  </div>
  <div class="form-group">
    <label for="user-introduction">Introduction</label>
    <%= f.text_field :introduction, autofocus: true, class: "form-control introduction" %>
  </div>


  <%= f.submit "Update User" %>
<% end %>