<%#パスはuser_pathでリンクがusers/:id%>
<%#ユーザーが投稿した本の一覧を持ってくるにはどうすれば良いか%>
<%= render 'books/list', user: current_user %>
<div>
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60 %>
  <h3><%= @user.name %></h3>
  <div class="col-md-8" offset-md-1>
<% @books.each do |book| %>
  <h2>Book Detail</h2>
  <table class="table">
    <tbody>
      <tr>
        <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60 %></br>
            <%= link_to book.user.name %></td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :delete %></td>
      </tr>
    </tbody>
  </table>
<% end %>
</div>
</div>